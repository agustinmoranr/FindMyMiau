---
import Link from '@/components/ui/Link';
import Logo from '@/components/Logo.astro';
import CTAButton from './CTAButton.astro';
import SignInButton from './SignInButton.astro';
import { ROUTES } from '@/lib/routes';

const hasSession = Boolean(Astro.locals.session);
const userIsInDashboard = Astro.url.pathname === ROUTES.DASHBOARD;
---

<header
	class='sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60'
>
	<div
		class='container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0 mx-auto'
	>
		<a href='/'>
			<Logo />
		</a>

		<div class='hidden md:flex flex-1 items-center justify-end space-x-4'>
			<nav class='flex items-center space-x-2 md:space-x-6'>
				<Link href='#features' className='text-sm font-medium '>
					Funciones
				</Link>
				<Link href='#how-it-works' className='text-sm font-medium '>
					¿Cómo Funciona?
				</Link>
				<Link href='#testimonials' className='text-sm font-medium '>
					Testimonios
				</Link>
				<Link href='#faq' className='text-sm font-medium'> FAQ </Link>

				<SignInButton />
				{
					!userIsInDashboard && (
						<CTAButton
							elevationEffectHover={false}
							shadowEffectHover={false}
							class='font-medium text-sm'
							PawPrintProps={{
								className: '!size-3.5',
							}}>
							{hasSession ? 'Dashboard' : 'Crear Perfil'}
						</CTAButton>
					)
				}
			</nav>
		</div>
	</div>
</header>
